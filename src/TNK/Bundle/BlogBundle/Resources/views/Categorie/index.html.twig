{% extends '::base.html.twig' %}
{% from 'MopaBootstrapBundle::macros.html.twig' import label, badge %}

{% block headline %}
    <h1>Catégories</h1>
{% endblock %}
    
{% block content %}

    <div class="col-lg-12">
        <div class="header-buttons">    
            <a class="btn btn-success pull-right" href="{{ path('categorie_new') }}">Créer une catégorie</a>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Ordre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.titre }}</td>
                    <td>{{ entity.ordre }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('categorie_show', { 'id': entity.id }) }}">Voir</a>
                        <a class="btn btn-info" href="{{ path('categorie_edit', { 'id': entity.id }) }}">Modifier</a>
                        <a class="btn btn-danger" href="{{ path('categorie_delete', { 'id': entity.id }) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
